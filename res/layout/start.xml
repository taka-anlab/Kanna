<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/start">
    <Button android:id="@+id/btn_learn" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1"  android:background="@drawable/learn" android:paddingTop="20dip"></Button>
    <Button android:id="@+id/btn_practice" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1"  android:background="@drawable/practice"></Button>
    <Button  android:id="@+id/btn_setting" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1"  android:background="@drawable/entry"></Button>
    <TextView android:text="TextView" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>


</LinearLayout>
